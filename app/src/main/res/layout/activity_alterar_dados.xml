<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ID do Beneficiário (não editável) -->
    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID do Beneficiário"
        android:inputType="text"
        android:enabled="false" />

    <!-- Nome do Beneficiário -->
    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Beneficiário"
        android:inputType="text" />

    <!-- Contacto -->
    <EditText
        android:id="@+id/edit_contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contacto"
        android:inputType="phone" />

    <!-- Referência -->
    <EditText
        android:id="@+id/edit_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Referência"
        android:inputType="text" />

    <!-- Número de membros da família -->
    <EditText
        android:id="@+id/edit_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de membros da família"
        android:inputType="number" />

    <!-- Nacionalidade -->
    <EditText
        android:id="@+id/edit_nationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nacionalidade"
        android:inputType="text" />

    <!-- Notas -->
    <EditText
        android:id="@+id/edit_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notas"
        android:inputType="textMultiLine" />

    <!-- Pedidos -->
    <EditText
        android:id="@+id/edit_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pedidos"
        android:inputType="textMultiLine" />

    <!-- Número de Visitas -->
    <EditText
        android:id="@+id/edit_num_visitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Visitas"
        android:inputType="number" />

    <!-- Botão para salvar as alterações -->
    <Button
        android:id="@+id/button_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Alterações"
        android:layout_marginTop="16dp" />

</LinearLayout>
